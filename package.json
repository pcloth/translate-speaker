{
    "name": "translate-speaker",
    "displayName": "translate speaker 翻译朗读者API",
    "description": "这是一个非常简单好用的翻译-朗读-替换字符串一体化插件，你只需要配置一个接口参数即可。",
    "version": "1.0.0",
    "publisher": "pcloth",
    "icon": "assert/logo.png",
    "engines": {
        "vscode": "^1.1.37"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.startTranslate"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pcloth/translate-speaker.git"
    },
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.startTranslate",
                "title": "翻译并朗读"
            }
        ],
        "keybindings": [
            {
                "command": "extension.startTranslate",
                "key": "ctrl+shift+t",
                "mac": "cmd+shift+t",
                "when": "editorHasSelection"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.startTranslate",
                    "group": "navigation",
                    "when": "editorHasSelection"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "translate 设置",
            "properties": {
                "translateSpeaker.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "启用功能"
                },
                "translateSpeaker.enableSpeak": {
                    "type": "boolean",
                    "default": true,
                    "description": "启用朗读"
                },
                "translateSpeaker.apiType": {
                    "type": "string",
                    "default": "baidu",
                    "enum": [
                        "baidu"
                    ],
                    "description": [
                        "百度翻译API"
                    ]
                },
                "translateSpeaker.appId": {
                    "type": "string",
                    "default": "",
                    "description": "翻译API的账号，通常是appid"
                },
                "translateSpeaker.password": {
                    "type": "string",
                    "default": "",
                    "description": "翻译API的账号密钥，通常是指password或者appSecret"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "eslint": "^4.11.0",
        "request": "^2.88.2",
        "request-promise": "^4.2.6",
        "say": "^0.13.1",
        "typescript": "^2.6.1"
    }
}
